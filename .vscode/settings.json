{
  // tab extension
  "editor.tabSize": 2,

  // vscode-icons-team.vscode-icons config
  "vsicons.associations.folders": [
  ],
  "vsicons.associations.files": [
    {
      "icon": "jest",
      "format": "svg",
      "extensions": [
        "setupTests.js",
        "jest.mock.js",
        "jest.setup.js",
        "jest.config.json",
        "jest.json",
        ".jestrc",
        ".jestrc.js",
        ".jestrc.json",
      ],
      "filename": true,
      "filenamesGlob": ["jest.config", "jest.config.babel"],
      "extensionsGlob": ["js", "cjs", "mjs"],
    },
  ],

  // always have exactly one newline at the end of files
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
}
